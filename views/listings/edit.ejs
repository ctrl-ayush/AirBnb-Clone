<% layout("/layouts/boilerplate") %>
<body>
    
    <div class="row">
        <div class="col col-8 offset-2">
            <h3>Update your listing-:</h3><br><br>
            <form method ="post" action="/listings/<%= listing._id %>?_method=PUT"  class="needs-validation"  novalidate >
                <div class="col mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" value="<%= listing.title %>" placeholder="Enter Title" type="text"class="form-control" >
                </div>
                <div class="col mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" name="listing[description]"><%= listing.description %></textarea>
                </div>
                <div class="col mb-3">
                    <label for="image" class="form-label">Image Link</label>
                    <input name="listing[image]" value="<%= listing.image.url%>"class="form-control" placeholder="Enter image URL" type="text">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4" >
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]"  value="<%= listing.country %>" class="form-control" placeholder="Enter country" type="text">
                    </div>
                    <div class="mb-3 col-md-8" >
                        <label for="location" class="form-label">Location</label>
                        <input name="listing[location]"value="<%= listing.location %>" class="form-control" placeholder="Enter location" type="text">
    
                    </div>
                </div>
                
                <div class="col mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" value="<%= listing.price %>" placeholder="Enter price" type="number">
                </div>
                
                <button>Update</button>
            </form>
        </div>
    </div>
        
</body>